// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int       @id @default(autoincrement())
  primary_name String    @db.VarChar(20)
  second_name  String    @db.VarChar(20)
  email        String    @unique @db.VarChar(100)
  password     String    @db.VarChar(240)
  created_at   DateTime  @default(now())
  desktop      desktop[]
}

model desktop {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(200)
  user_id     Int
  created_at  DateTime @default(now())
  link_access String   @db.VarChar(240)
  card        card[]
  desktop     users?   @relation(fields: [desktop_id], references: [id])
  desktop_id  Int?
}

model card {
  id            Int        @id @default(autoincrement())
  title         String     @db.VarChar(200)
  description   String     @db.Text
  desktop       desktop?   @relation(fields: [desktop_id], references: [id])
  desktop_id    Int
  members       Int
  created_at    DateTime   @default(now())
  delivery_date DateTime
  comment       comment[]
  listTask      listTask[]
  file          file[]
}

model listTask {
  id      Int    @id @default(autoincrement())
  name    String @db.VarChar(60)
  task    task[]
  card    card?  @relation(fields: [card_id], references: [id])
  card_id Int
}

model task {
  id            Int       @id @default(autoincrement())
  name          String    @db.VarChar(60)
  created_at    DateTime  @default(now())
  delivery_date DateTime
  done          Boolean   @default(false)
  memeberId     Int
  todo_list     listTask? @relation(fields: [todo_id], references: [id])
  todo_id       Int
}

model comment {
  id           Int      @id @default(autoincrement())
  userId       Int
  comment_text String   @db.Text
  created_at   DateTime @default(now())
  card         card?    @relation(fields: [card_id], references: [id])
  card_id      Int
}

model file {
  id         Int      @id @default(autoincrement())
  title      String   @db.VarChar(240)
  created_at DateTime @default(now())
  card       card?    @relation(fields: [card_id], references: [id])
  card_id    Int
}
